<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.statusbarvirtualkey.mybattery.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.statusbarvirtualkey.mybattery.MyBattery
        android:id="@+id/user_charge"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_20"
        app:mb_showPercent="true"
        app:mb_baseColor="@color/line_color"
        app:mb_powerColor="@color/colorPrimary"
        app:mb_percentTextSize="@dimen/sp_12"/>

</android.support.constraint.ConstraintLayout>
